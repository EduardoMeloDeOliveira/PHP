{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center flex-column">
        <ul class="list-group w-50">
            {% for season in seasons %}

                {#                {{ dump(season) }} #}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>{{ series_name }} - Temporada {{ season.number }}</span>
                    <a href="{{ path('app_episodes_redirect', {seasonId: season.id}) }}"><span
                                class="badge bg-primary">{{ watched }}/{{ season.episode|length }} epis√≥dios assistidos</span></a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <a class="btn btn-secondary ms-3 mt-4" href="/series">Voltar</a>
{% endblock %}
