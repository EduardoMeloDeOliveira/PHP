{% extends 'base.html.twig' %}

{% block title %}Listagem de séries{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ controller_name }}! ✅</h1>
        <a href="/series/create">Adicionar uma nova séria</a>
        {% for serie in  seriesList %}
            <p> {{ serie }}</p>
        {% endfor %}
    </div>
{% endblock %}
