{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center align-items-center flex-column">
        <a href="{{ path('app_redirect_create_form') }}" class="btn btn-dark mb-3">Adicionar uma nova s√©rie</a>
        <ul class="list-group w-50">
            {% for serie in seriesList %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>{{ serie.id }} {{ serie.name }}</span>

                    <div class="d-flex">
                        <form method="post">
                            <a href="{{ path('app_redirect_edit_form' , {series : serie.id}) }}" class="btn btn-outline-primary me-2">Editar</a>
                        </form>

                        <form method="post" action="{{ path('app_delete_series', {id: serie.id}) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
